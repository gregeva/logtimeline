# For Ubuntu

sudo apt-get install libperl-dev
sudo apt-get update
sudo apt-get install build-essential
sudo apt-get install cpanminus
sudo cpanm PAR::Packer
system("perl ./ltl /ThingworxStorage/logs/ApplicationLog.log");
pp -x -o ltl_static-binary_ubuntu-amd64 wrapper.pl

# Mac

xcode-select --install
brew install gcc
brew install perl
brew install cpanminus
cpanm PAR::Packer
sudo cpanm DateTime.pm Term::ReadKey.pm Proc::ProcessTable.pm

cpanm PAR::Packer --force
wrapper.pl > system("perl ./ltl /Users/geva/Downloads/bspa003/11mar-14mar/access_logs/localhost_access_log-twx01-twx-thingworx-0.2025-03-11.txt"); 
pp -o ltl_static-binary_macos-arm64 wrapper.pl


# Windows

Download and install Strawberry Perl

cd C:\Strawberry\perl\bin
cpan CPAN
cpan App::cpanminus
cpanm --self-upgrade
cpan Win32::Process
cpan Win32::API
cpan App::cpanminus
cpanm Win32::Process::Info
cpanm --look Win32::Process::Info





perl -MCPAN -e shell
install Quantum::Entanglement
perl -MCPAN -e "install PAR::Packer"
perl -MCPAN -e "install DateTime"
cpan install DateTime.pm
cpan Win32::Process::Info

pp -o ltl_static-binary_windows-amd64 ltl


